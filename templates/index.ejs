<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title></title>
</head>
<body>
    <a href="/" class="home" style="align-self: flex-start"><button type="button">Home</button></a>
    <% if (user) { %>
        <!-- user home page -->
        <%- include('messages.ejs') %>
        <a href="/logout" class="logout"><button type="button">Log Out</button></a>
    <% } else { %>
        <!-- login page -->
        <%- include('sign-up-form'); %>
        <% if (locals.error) { %>
            <br>
            <p style="color: red;"><%= error %></p>
        <% } %>
    <% } %>

    
</body>
</html>